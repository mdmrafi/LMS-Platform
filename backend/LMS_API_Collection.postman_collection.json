          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"progress\": 100\n}"
            },
            "url": {
              "raw": "{{base_url}}/courses/{{course_id}}/progress",
              "host": ["{{base_url}}"],
              "path": ["courses", "{{course_id}}", "progress"]
            }
          }
        }
