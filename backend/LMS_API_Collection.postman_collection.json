    {
      "name": "Courses",
      "item": [
        {
          "name": "Get All Courses",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/courses",
              "host": ["{{base_url}}"],
              "path": ["courses"]
            }
          }
        },
        {
          "name": "Get Single Course",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/courses/{{course_id}}",
              "host": ["{{base_url}}"],
              "path": ["courses", "{{course_id}}"]
            }
          }
        },
        {
          "name": "Create Course (Instructor)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My Awesome Course\",\n  \"description\": \"Learn awesome things\",\n  \"price\": 3999,\n  \"duration\": 30,\n  \"category\": \"Programming\",\n  \"level\": \"Beginner\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/courses",
              "host": ["{{base_url}}"],
              "path": ["courses"]
            }
          }
        },
        {
          "name": "Add Material (Instructor)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Introduction Lesson\",\n  \"type\": \"video\",\n  \"content\": \"https://example.com/video.mp4\",\n  \"duration\": 15,\n  \"order\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/courses/{{course_id}}/materials",
              "host": ["{{base_url}}"],
              "path": ["courses", "{{course_id}}", "materials"]
            }
          }
        },
        {
          "name": "Get My Courses (Instructor)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/courses/instructor/my-courses",
              "host": ["{{base_url}}"],
              "path": ["courses", "instructor", "my-courses"]
            }
          }
        },
        {
          "name": "Get Enrolled Courses (Learner)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
